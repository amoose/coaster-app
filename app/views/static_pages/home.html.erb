<% if signed_in? %>
	<div class="row">
		<div class="span4">
			<h1>Welcome back, <%= current_user.name %></h1>
			<br />
			<div id="locator-wrapper">
				<%= render 'shared/locator' %>
			</div>
		</div>
		<div class="span8">
			<h2>Trains</h2>
			<%= debug @stations %>

		</div>
	</div>
<% else %>
	<div class="row">
		<div class="span4">
			<h1>Welcome</h1>
			<p></p>
		</div>
		<div class="span8">
			<%= render 'shared/stations' %>
		</div>
	</div>
<% end %>
